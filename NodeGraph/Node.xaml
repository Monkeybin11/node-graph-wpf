<Border x:Class="Ogxd.NodeGraph.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ogxd.NodeGraph"
             mc:Ignorable="d" Width="250" Height="100"
             CornerRadius="0" Background="#131a24" BorderBrush="Black" BorderThickness="2"
             d:DesignHeight="300" d:DesignWidth="300">
    <!--<Border.Effect>
        <DropShadowEffect ShadowDepth="0" BlurRadius="50" />
    </Border.Effect>-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="8"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" x:Name="stackInputs" Margin="-8,0,0,0" VerticalAlignment="Center">

        </StackPanel>
        <StackPanel Grid.Column="1" x:Name="stackParameters"  VerticalAlignment="Center">

        </StackPanel>
        <StackPanel Grid.Column="2" x:Name="stackOutputs" Margin="0,0,-8,0" VerticalAlignment="Center">

        </StackPanel>
    </Grid>
</Border>
